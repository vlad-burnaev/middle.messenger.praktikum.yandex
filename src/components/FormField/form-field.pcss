.form-field {
  &:not(:first-of-type) {
    margin-top: 16px;
  }

  &__label {
    display: inline-block;
    width: 100%;

    margin-bottom: 8px;

    color: var(--color-grey);

    font-size: 9px;
    line-height: 9px;
  }

  &__input {
    width: 100%;

    padding-bottom: 7px;

    outline: none;

    border-bottom: 1px solid var(--color-blue);
  }

  &__error {
    margin-top: 7px;

    color: var(--color-red);

    font-size: 8px;
    line-height: 8px;
  }
}
